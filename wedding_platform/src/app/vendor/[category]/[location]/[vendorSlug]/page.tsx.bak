import Link from 'next/link';

interface VendorProfilePageProps {
  params: Promise<{
    category: string;
    location: string;
    vendorSlug: string;
  }>;
}

const getVendorData = async (vendorSlug: string) => {
  try {
    // Fetch from database API
    const response = await fetch(`${process.env.NEXT_PUBLIC_API_URL || 'http://localhost:3000'}/api/vendors/${encodeURIComponent('makeup-artists')}/${encodeURIComponent('bangalore')}/${encodeURIComponent(vendorSlug)}`, {
      cache: 'no-store'
    })

    if (!response.ok) {
      return null
    }

    const vendor = await response.json()
    return vendor
  } catch (error) {
    console.error('Error fetching vendor:', error)
    return null
  }
};

